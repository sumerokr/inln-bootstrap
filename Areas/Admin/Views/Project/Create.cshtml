@model inln_bootstrap.Areas.Admin.Models.ProjectModel

@{
    ViewBag.Title = "Создание проекта";
}

@using (Html.BeginForm("Create", "Project", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Данные проекта</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsVisible)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsVisible)
            @Html.ValidationMessageFor(model => model.IsVisible)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.UrlAddress)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UrlAddress)
            @Html.ValidationMessageFor(model => model.UrlAddress)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Logo)
        </div>
        <div class="editor-field">
            <input type="file" name="logoFile" id="Logo" />
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MainImage)
        </div>
        <div class="editor-field">
            <input type="file" name="mainFile" id="MainImage" />
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsSpecial)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsSpecial)
            @Html.ValidationMessageFor(model => model.IsSpecial)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SliderImage)
        </div>
        <div class="editor-field">
            <input type="file" name="sliderFile" id="SliderImage" />
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IntroText)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IntroText)
            @Html.ValidationMessageFor(model => model.IntroText)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.FullText)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FullText)
            @Html.ValidationMessageFor(model => model.FullText)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ResponseImage)
        </div>
        <div class="editor-field">
            <input type="file" name="responseFile" id="ResponseImage" />
        </div>

        <div class="form-actions">
            <input type="submit" class="btn btn_primary" value="Сохранить" />
            @Html.ActionLink("Вернуться к списку", "Index", null, new { @class = "btn" })
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
