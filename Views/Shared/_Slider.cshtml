@model IEnumerable<inln_bootstrap.Areas.Admin.Models.ProjectModel>

@{
    int counter1 = 0;
    int counter2 = 0;
}

<div class="row">
    <div class="span12">
        <h3><a href="#">Наши работы</a></h3>
        <div id="myCarousel" class="carousel slide">
            <ol class="carousel-indicators">
                @foreach (inln_bootstrap.Areas.Admin.Models.ProjectModel project in Model)
                {
                    if (counter1 == 0)
                    {
                    <li data-target="#myCarousel" data-slide-to="@counter1" class="active"></li>
                    }
                    else
                    {
                    <li data-target="#myCarousel" data-slide-to="@counter1"></li>
                    }
                    counter1++;
                }
            </ol>

            <div class="carousel-inner">
                @foreach (inln_bootstrap.Areas.Admin.Models.ProjectModel project in Model)
                {
                    if (counter2 == 0)
                    {
                    <div class="item active">
                        <img src="@Url.Content(project.SliderImage)" width="940" height="400" alt="@project.SliderImageAlt" title="@project.SliderImageTitle" />
                        <div class="carousel-caption">
                            <h4><a href="@Url.Content("~/Web/Project/" + project.Guid)">@project.Name</a></h4>
                            <p>@project.IntroText</p>
                        </div>
                    </div>
                    }
                    else
                    {
                    <div class="item">
                        <img src="@Url.Content(@project.SliderImage)" width="940" height="400" alt="@project.SliderImageAlt" title="@project.SliderImageTitle" />
                        <div class="carousel-caption">
                            <h4><a href="@Url.Content("~/Web/Project/" + project.Guid)">@project.Name</a></h4>
                            <p>@project.IntroText</p>
                        </div>
                    </div>
                    }
                    counter2++;
                }
            </div>

            <a class="carousel-control left" href="#myCarousel" data-slide="prev">‹</a>
            <a class="carousel-control right" href="#myCarousel" data-slide="next">›</a>
        </div>
    </div>
</div>

<hr />